<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDBDB"
    android:orientation="vertical">

    <include layout="@layout/title_bar_center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_center_cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/center_item_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/center_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="姓名"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_alignTop="@+id/center_item_iv"
                        android:layout_toEndOf="@+id/center_item_iv" />

                    <TextView
                        android:id="@+id/center_item_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看或编辑个人主页"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp"
                        android:layout_below="@+id/center_item_name"
                        android:layout_toEndOf="@+id/center_item_iv" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_center_cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_center_cv1"
                android:layout_marginTop="10dp"
                android:clickable="false">

                <ListView
                    android:id="@+id/fragment_center_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_center_cv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_center_cv2"
                android:layout_marginTop="10dp"
                android:clickable="false">

                <ListView
                    android:id="@+id/fragment_center_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>